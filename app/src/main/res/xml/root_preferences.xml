<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/Notifications" >
        <SwitchPreference
            android:defaultValue="true"
            android:key="notification_settings"
            android:title="@string/show_notifications" />
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/SplashScreen">
        <SwitchPreference
            android:defaultValue="true"
            android:key="splash_enable"
            android:title="@string/show_splash_screen" />
    </PreferenceCategory>

</PreferenceScreen>